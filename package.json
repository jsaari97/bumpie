{
  "name": "bumpie",
  "description": "Bump the version of your assets on package.json version increments",
  "version": "0.0.0",
  "author": "Jim Saari @jsaari97",
  "bin": {
    "bumpie": "./bin/run"
  },
  "bugs": "https://github.com/jsaari97/bumpie/issues",
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@types/node": "^12.0.0",
    "@types/yargs": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "ava": "^3.11.1",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/lib"
  ],
  "homepage": "https://github.com/jsaari97/bumpie",
  "keywords": [
    "bumpie",
    "version",
    "bump",
    "cli"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "repository": "jsaari97/bumpie",
  "scripts": {
    "pretest": "rm -rf lib && tsc -b",
    "posttest": "eslint . --ext .ts --config .eslintrc",
    "prepack": "rm -rf lib && tsc -b && oclif-dev readme",
    "test": "ava",
    "version": "oclif-dev readme && git add README.md"
  },
  "types": "lib/index.d.ts",
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "lib/"
      }
    }
  },
  "bumpie": {
    "src/version.js": ["\"v\\d+\\.\\d+\\.\\d+\"", "\"v<version>\""]
  }
}
